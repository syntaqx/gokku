root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[{Makefile,go.mod,go.sum,*.go,.gitmodules}]
indent_style = tab

[*.{md,markdown},LICENSE]
trim_trailing_whitespace = false

[*.html]
indent_size = 2

# Explicitly CRLF for DOS/Windows
[*.{[Bb][Aa][Tt],[Cc][Mm][Dd]}]
end_of_line = crlf
